{
  "scripts": {
    "setup-mysql": "Instructions for MySQL setup",
    "setup-postgres": "Instructions for PostgreSQL setup"
  },
  "instructions": {
    "mysql": [
      "1. Start XAMPP (Apache + MySQL)",
      "2. Open phpMyAdmin: http://localhost/phpmyadmin",
      "3. Create database: heat_eat_db",
      "4. Import: database-setup-mysql.sql",
      "5. Install: npm install mysql2",
      "6. Copy .env.example to .env and configure DATABASE_URL for MySQL",
      "7. Update code for MySQL (see README.md)",
      "8. Run: npm run dev"
    ],
    "postgresql": [
      "1. Install PostgreSQL",
      "2. Create database: createdb heat_eat_db",
      "3. Copy .env.example to .env and configure DATABASE_URL",
      "4. Run: npm run db:push",
      "5. Import: psql -d heat_eat_db -f database-setup.sql",
      "6. Run: npm run dev"
    ]
  }
}